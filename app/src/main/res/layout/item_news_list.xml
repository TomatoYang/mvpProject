<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/home_item_root_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_news_photo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="4dp"
            android:scaleType="centerCrop"
            android:src="@drawable/header"
            android:transitionName="photos"
            />

        <TextView
            android:id="@+id/tv_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_news_photo"
            android:layout_toRightOf="@+id/iv_news_photo"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="新闻头"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?android:attr/textColorPrimary"/>

        <TextView
            android:id="@+id/tv_news_digest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news_photo"
            android:layout_alignLeft="@+id/tv_news_title"
            android:layout_below="@+id/tv_news_title"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorPrimary"
            android:text="新闻详情"/>

        <TextView
            android:id="@+id/tv_news_ptime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_news_photo"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp"
            android:text="2017-02-8 08:09:19"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
